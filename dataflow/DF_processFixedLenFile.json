{
	"name": "DF_processFixedLenFile",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_fixedlenfile_INPUT",
						"type": "DatasetReference"
					},
					"name": "SRCfixedLenTxt"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_fixedlenfile_OUTPUT",
						"type": "DatasetReference"
					},
					"name": "empsink"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {1000kavita     MP1112233445} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SRCfixedLenTxt",
				"SRCfixedLenTxt derive(empID = substring({1000kavita     MP1112233445}, 1,4),",
				"          empName = substring({1000kavita     MP1112233445}, 5,11),",
				"          state = substring({1000kavita     MP1112233445}, 16,2),",
				"          mobile = substring({1000kavita     MP1112233445}, 18,10)) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          empID,",
				"          empName,",
				"          state,",
				"          mobile",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> empsink"
			]
		}
	}
}